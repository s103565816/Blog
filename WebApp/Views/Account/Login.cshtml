@model UserViewModel

<h2>Login</h2>

<form asp-action="Login" method="post">
	<div>
		<label asp-for="UserName"></label>
		<input asp-for="UserName" />
	</div>

	<div>
		<label asp-for="Password"></label>
		<input asp-for="Password" type="password"/>
	</div>

	<button type="submit">Login</button>
</form>